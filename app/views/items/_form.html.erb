<%= form_for [@user,@user.items.build], remote: true do |f| %>
   <% if item.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(item.errors.count, "error") %>.</h4>
       <ul>
         <% item.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
   <%= form_group_tag(item.errors[:name]) do %>
     <%= f.label :name %>
     <%= f.label "New To-do" %>
     <%= f.text_field :name, class: 'form-control', placeholder: "Enter to-do" %>
   <% end %>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %> 
